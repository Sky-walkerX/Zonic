{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/vite",
      "config": {
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/test-backend", "dest": "backend/index.js" },
    { "src": "/api/(.*)", "dest": "backend/index.js" },
    { "src": "/login", "dest": "backend/index.js" },
    { "src": "/callback", "dest": "backend/index.js" },
    { "src": "/refresh_token", "dest": "backend/index.js" },
    { "src": "/user", "dest": "backend/index.js" },
    { "src": "/playlists", "dest": "backend/index.js" },
    { "src": "/playlists/(.*)/tracks", "dest": "backend/index.js" },
    { "src": "/liked-songs", "dest": "backend/index.js" },
    { "src": "/top-tracks", "dest": "backend/index.js" },
    { "src": "/me/shows", "dest": "backend/index.js" },
    { "src": "/(.*\\..+)", "dest": "frontend/dist/$1" },
    { "src": "/(.*)", "dest": "frontend/dist/index.html" }
  ]
}